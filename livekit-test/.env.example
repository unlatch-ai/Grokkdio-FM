# Run Mode
# Set to 'true' to run locally without LiveKit (plays audio on your speakers)
# Set to 'false' to use LiveKit for streaming
LOCAL_MODE=true

# API Mode
# Set to 'true' to use XAI Realtime API (faster, streaming LLM+TTS)
# Set to 'false' to use separate LLM and TTS calls
USE_REALTIME=false

# LiveKit Configuration (only needed if LOCAL_MODE=false)
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# XAI API Configuration
XAI_API_KEY=your-xai-api-key-here
XAI_BASE_URL=https://api.x.ai/v1

# Podcast Configuration
PODCAST_TOPIC=The Future of AI and Human Creativity

# AI Interruption Settings
# Set to 0.0 to disable AI-to-AI interruptions (only you can interrupt)
# Set to 0.3 for 30% chance of interruptions (more dynamic)
AI_INTERRUPTION_CHANCE=0.0

# Twitch Streaming (optional)
TWITCH_MODE=false
TWITCH_STREAM_KEY=live_xxxxx_xxxxxxxxxxxxxxxxxxxxxxxxxx
TWITCH_RTMP_URL=rtmp://live.twitch.tv/app

# Twilio Phone Integration (optional)
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_SERVER_PORT=3001

# Voice IDs (XAI TTS)
# Available voices: ara, deedee, paul, etc.
X_BEARER_TOKEN=bearer